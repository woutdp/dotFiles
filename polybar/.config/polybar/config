[bar/mybar]
modules-left = bspwm
modules-right = backlight temperature memory cpu wlan battery pulseaudio date

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = hack:pixelsize=11;2
font-1 = FontAwesome5Free:style=Solid:size=11;2
font-2 = FontAwesome5Free:style=Regular:size=11;2
font-3 = FontAwesome5Brands:style=Regular:size=11;2

override-redirect = true
enable-ipc = true
bottom = true
tray-position = right

cursor-click = pointer
cursor-scroll = ns-resize

separator = " | "


[module/date]
type = internal/date
date = %A, %H:%M %d-%m-%Y


[module/battery]
