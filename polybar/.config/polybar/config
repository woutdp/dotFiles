[colors]
background = #33332F
background-alt = #444
foreground = #EBDBB2
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/mybar]
modules-left = bspwm
modules-right = backlight temperature memory cpu wlan battery pulseaudio date

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "hack:pixelsize=11;2"
font-1 = "FontAwesome5Free:style=Solid:size=14;2"
font-2 = "FontAwesome5Free:style=Regular:size=14;2"
font-3 = "FontAwesome5Brands:style=Regular:size=14;2"

override-redirect = true
enable-ipc = true
bottom = true
tray-position = right

cursor-click = pointer
cursor-scroll = ns-resize

separator = " | "


[module/date]
type = internal/date
date = %A, %H:%M %d-%m-%Y


[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
full-at = 99
poll-interval = 1

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-framerate = 460


[module/wlan]
type = internal/network
interface = wlan0
interval = 3
format-connected = %{A:connman-gtk&:}<label-connected>%{A}
label-connected = %essid% [%signal%]  %downspeed%  %upspeed%

label-disconnected = %{A:connman-gtk&:}disconnected%{A}
label-disconnected-foreground = ${colors.foreground-alt}


[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground-alt}

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

# Don't display empty workspaces
label-empty =


[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1f.3.analog-surround-40
use-ui-max = false

format-volume = %{A3:pavucontrol&:}<label-volume>%{A}
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = %{A3:pavucontrol&:}muted%{A}
label-muted-foreground = ${colors.foreground-alt}

click-right = pavucontrol &


[module/cpu]
type = internal/cpu

